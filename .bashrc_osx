#EXPORTS
export PROMPT_COMMAND="echo" # add a newline after every command
export PS1="[\[\e[37m\]\T\[\e[m\]]\[\e[37m\]\u\[\e[m\]@\[\e[37m\]\h\[\e[m\]:\w\[\e[32m\]\\n\$\[\e[m\] "
export PATH=$PATH:/usr/local/opt/go/libexec/bin
export GOPATH=~/work/go
export EDITOR="vim"
export FZF_DEFAULT_COMMAND="rg --files --no-ignore-vcs --hidden"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

#Alias
alias vim="nvim"
alias gotows="cd ~/work"
alias buspirate="sudo cu -s 115200 -l //dev/tty.usbserial-A900ftNH"
alias setcscope="export CSCOPE_DB=$(pwd)"
alias sov="source ~/.virtualenvs/default/bin/activate"

[ -f ~/.fzf.bash ] && source ~/.fzf.bash
